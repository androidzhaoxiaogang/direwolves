{
  "name" : "add_device",
  "method": "POST",
  "path": "/devices",
  "scope" : "device:write",
  "filters" : ["timeout", "app_key", "jwt", "ip_restriction"],
  "whitelist" : ["192.168.0.1", "10.4.7.*"],
  "blacklist" : ["192.168.0.100"],
  "rate_limit" : [
    {
      "limit" : 1000,
      "limit_by" : "token",
      "type" : "hour"
    },
    {
      "limit" : 100,
      "limit_by" : "app_key",
      "type" : "second"
    }
  ],
  "strict_arg" : true,
  "url_args" : [
    {
      "name" : "limit",
      "default_value" : 10,
      "rules" : {
        "integer":true,
        "max":100,
        "min":1
      }
    },
    {
      "name" : "start",
      "default_value" : 0,
      "rules" : {
        "integer":true
      }
    }
  ],
  "body_args" : [
    {
      "name" : "encryptKey",
      "rules" : {
        "required" : true,
        "regex" : "[0-9A-F]{16}"
      }
    },
    {
      "name" : "type",
      "default_value" : 1,
      "rules" : {
        "required" : true,
        "optional" : [1, 2, 3]
      }
    },
    {
      "name" : "barcode",
      "rules" : {
        "required" : true,
        "regex" : "[0-9a-zA-Z]{16}"
      }
    },
    {
      "name": "deviceCode",
      "rules": {
        "prohibited": true
      }
    }
  ],
  "endpoints": [
    {
      "type" : "http",
      "name" : "add_device",
      "service": "device",
      "method": "POST",
      "path": "/devices",
      "request.header.remove" : ["h3", "h4"],
      "request.query.remove" : ["q3", "q4"],
      "request.body.remove" : ["p3", "p4"],
      "request.header.replace" : ["h5:v5", "h6:v6"],
      "request.query.replace" : ["q5:b5", "q6:v6"],
      "request.body.replace" : ["p5:v5", "p6:v6"],
      "request.header.add" : ["h1:v1", "h2:v2"],
      "request.query.add" : ["q1:v1", "q2:v2"],
      "request.body.add" : ["p1:v1", "p2:v2"]
    },
    {
      "type" : "http",
      "name" : "add_device2",
      "service": "device",
      "method": "POST",
      "path": "/devices",
      "request.header.remove" : ["h3", "h4"],
      "request.query.remove" : ["q3", "q4"],
      "request.body.remove" : ["p3", "p4"],
      "request.header.replace" : ["h5:v5", "h6:v6"],
      "request.query.replace" : ["q5:b5", "q6:v6"],
      "request.body.replace" : ["p5:v5", "p6:v6"],
      "request.header.add" : ["h1:v1", "h2:v2"],
      "request.query.add" : ["q1:v1", "q2:v2"],
      "request.body.add" : ["p1:v1", "p2:v2"]
    }
  ]
}