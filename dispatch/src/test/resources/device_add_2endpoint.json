{
  "name" : "add_device",
  "method": "PUT",
  "path": "/devices",
  "scope" : "device:write",
  "ip_restriction" : {
    "whitelist" : ["192.168.0.1", "10.4.7.*"],
    "blacklist" : ["192.168.0.100"]
  },
  "rate_limit" : [
    {
      "limit" : 1000,
      "limit_by" : "token",
      "type" : "hour"
    },
    {
      "limit" : 100,
      "limit_by" : "app_key",
      "type" : "second"
    }
  ],
  "strict_arg" : true,
  "url_arg" : [
    {
      "name" : "limit",
      "default_value" : 10,
      "rules" : {
        "integer":true,
        "max":100,
        "min":1
      }
    },
    {
      "name" : "start",
      "default_value" : 0,
      "rules" : {
        "integer":true
      }
    }
  ],
  "request_transformer" : [
    {
      "name" : "add_device",
      "header.remove" : ["h3", "h4"],
      "query.remove" : ["q3", "q4"],
      "body.remove" : ["p3", "p4"],
      "header.replace" : ["h5:v2", "h6:v1"],
      "query.replace" : ["q5:v2", "q6:v1"],
      "body.replace" : ["p5:v2", "p6:v1"],
      "header.add" : ["h1:v2", "h2:v1"],
      "query.add" : ["q1:v2", "q2:v1"],
      "body.add" : ["p1:v2", "p2:v1"]
    }
  ],
  "endpoints": [
    {
      "type" : "http",
      "name" : "add_device",
      "service": "device",
      "method": "POST",
      "path": "/devices"
    },
    {
      "type" : "http",
      "name" : "update_device",
      "service": "device",
      "method": "PUT",
      "path": "/devices"
    }
  ]
}