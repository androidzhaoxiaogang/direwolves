{
  "name" : "update_device",
  "method": "PUT",
  "path": "devices/([\\d+]+)",
  "scope" : "device:write",
  "auth" : "jwt",
  "url_args" : [
    {
      "name" : "limit",
      "defaut_value" : 10,
      "rules" : {
        "integer":true,
        "max":100,
        "min":1
      }
    },
    {
      "name" : "start",
      "defaut_value" : 0,
      "rules" : {
        "integer":true
      }
    }
  ],
  "endpoints": [
    {
      "name" : "device",
      "service": "device",
      "method": "PUT",
      "path": "/devices"
    }
  ]
}