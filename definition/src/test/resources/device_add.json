{
  "name" : "add_device",
  "method": "POST",
  "path": "/devices",
  "scope" : "device:write",
  "filters" : ["timeout", "app_key", "jwt", "ip_restriction"],
  "ip_restriction" : {
    "whitelist" : ["192.168.0.1", "10.4.7.*"],
    "blacklist" : ["192.168.0.100"]
  },
  "rate_limit" : [
    {
      "limit" : 1000,
      "limit_by" : "token",
      "type" : "hour"
    },
    {
      "limit" : 100,
      "limit_by" : "app_key",
      "type" : "second"
    }
  ],
  "url_args" : [
    {
      "name" : "limit",
      "defaut_value" : 10,
      "rules" : {
        "integer":true,
        "max":100,
        "min":1
      }
    },
    {
      "name" : "start",
      "defaut_value" : 0,
      "rules" : {
        "integer":true
      }
    }
  ],
  "body_args" : [
    {
      "name" : "encryptKey",
      "rules" : {
        "required" : true,
        "regex" : "[0-9A-F]{16}"
      }
    },
    {
      "name" : "type",
      "defaut_value" : 1,
      "rules" : {
        "required" : true,
        "optional" : [1, 2, 3]
      }
    },
    {
      "name" : "barcode",
      "rules" : {
        "required" : true,
        "regex" : "[0-9a-zA-Z]{16}"
      }
    },
    {
      "name": "deviceCode",
      "rules": {
        "prohibited": true
      }
    }
  ],
  "endpoints": [
    {
      "name" : "add_device",
      "service": "device",
      "method": "POST",
      "path": "/devices",
      "request_transformer" : {
        "remove" : {
          "headers" : ["h3", "h4"],
          "url_args" : ["q3", "q4"],
          "body_args" : ["p3", "p4"]
        },
        "replace" : {
          "headers" : ["h5:v2", "h6:v1"],
          "url_args" : ["q5:v2", "q6:v1"],
          "body_args" : ["p5:v2", "p6:v1"]
        },
        "add" : {
          "headers" : ["h1:v2", "h2:v1"],
          "url_args" : ["q1:v2", "q2:v1"],
          "body_args" : ["p1:v2", "p2:v1"]
        }
      }
    }
  ]
}